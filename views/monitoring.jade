extends layout

block content
    //p monitoring
    //p *для редактирования нужно перейти в поле

    div(id="content")
        p(id="message")

    table(id="scanerGrid")
        div(id="scanerPager")

    div
        -if ( roles && roles.indexOf("admin") !== -1 ) {
            input(id="getScanerFile", type="button", class="btn btn-success has-margin", value="Скачать логи")
            input(id="setFerryName", type="button", class="btn btn-success has-margin", value="Установить название парома")
        -}

    div
        br
        fieldset
            legend Диаграмма работы

            div(class="divColumn")
                div(class="divRow")
                    label(for="beginDate") Начало
                    input(id="beginDate", type="text")
                div(class="divRow")
                    label(for="endDate") Окончание
                    input(id="endDate", type="text")
                div(class="divRow")
                    label(for="compareDiff") Детализация(мин)
                    input(id="compareDiff", type="number", val="10")

                div(class="divRow")
                    -if ( roles && roles.indexOf("admin") !== -1 ) {
                        input(id="showWorkDiagram", type="button", class="btn btn-success has-margin", value="Показать")
                    -}

            div(id="workDiagram")
                div(id="diagramMessage", class="ttest")
        
    link(rel="stylesheet", href="/libs/jqGrid/src/css/ui.jqgrid.css")
    link(rel="stylesheet", href="/libs/nprogress/nprogress.css")
    link(rel="stylesheet", href="/libs/sweetalert/dist/sweetalert.css")
    link(rel="stylesheet", href="/libs/chartist/chartist.css")
    link(rel="stylesheet", href="/libs/datetimepicker/jquery.datetimepicker.min.css")

    script(src="/scripts/monitoring.js")
    script(src="/scripts/workdiagram.js")
    script(src="/libs/sweetalert/dist/sweetalert.min.js")
    script(src="/libs/nprogress/nprogress.js")
    script(src="/libs/jqGrid/js/jquery.jqGrid.min.js")
    //script(src="/libs/jqGrid/src/grid.inlinedit.js")
    script(src="/libs/jqGrid/js/i18n/grid.locale-en.js")
    script(src="/socket.io/socket.io.js")
    script(src="/libs/chartist/chartist.min.js")

    script(src="/libs/datetimepicker/jquery.datetimepicker.full.min.js")

